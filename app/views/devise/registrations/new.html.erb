<h3>ユーザー登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="field input-field col s12">
      <i class="material-icons prefix">account_circle</i>
      <%= f.text_field :username,id: "username",class:"validate" %>
      <label for="username">ユーザー名</label>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s12">
      <i class="material-icons prefix">supervisor_account</i>
      <%= f.number_field :auth,id: "auth",class:"validate" %>
      <label for="auth">権限(0=来場者,1=人事)</label>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s12">
      <i class="material-icons prefix">email</i>
      <%= f.email_field :email,id: "email",class:"validate", autocomplete: "email" %>
      <label for="email">Email</label>
    </div>
  </div>

  <div class="row">
    <div class="field input-field col s6">
      <i class="material-icons prefix">vpn_key</i>
      <%= f.password_field :password,id: "password",class:"validate" ,autocomplete: "off" %>
      <label for="password">Password</label>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
    </div>
    <div class="field input-field col s6">
      <%= f.password_field :password_confirmation,id: "password_confirmation",class:"validate" %>
      <label for="password_confirmation">パスワードをもう一度入力してください</label>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録する",{ class: :"waves-effect waves-light btn" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
